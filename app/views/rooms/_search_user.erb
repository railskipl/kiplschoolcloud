<table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
  <% unless @students.blank? %>
    <tr class="tr-head">
      <td><%= t('sl_no') %></td>
      <td><%= t('first_name') %></td>
      <td><%= t('adm_no') %></td>
      <td><%= t('allocate') %></td>
    </tr>
    <tr class="tr-blank"></tr>
    <% @students.each_with_index do |student, i| %>
      <tr class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-1"><%= i+1 %></td>
        <td class="col-4"><%=  link_to student.full_name, :controller => 'student', :action => 'profile', :id => student.id%></td>
        <td class="col-7"><%= student.admission_no %></td>
        <td class="col-4">
          <% unless student.room_id %>
            <%= link_to t('allocate'), availabilty_path(:student_id => student.id) ,:class => 'fancybox fancybox.iframe' %>
          <%else%>
            <%= link_to t('deallocate'),deallocate_path(:student => student.id),:method => :post,:class => 'deallocate' %>
          <%end%>
        </td>
      </tr>
    <% end %>
  <% else %>
    <tr class="tr-<%= cycle('odd', 'even') %>">
      <td class="col-2"><%= t('no_students_found') %></td>
    </tr>
  <% end %>
</table>

<script type="text/javascript">
  (function($){
    $(document).ready(function(){
      if($('.fancybox').length > 0)
        $('.fancybox').fancybox({
          maxWidth : 450,
          maxHeight : 800,
          height: 250,
          fitToView : false,
          autoSize  : false,
          closeClick  : false,
          openEffect  : 'none',
          closeEffect : 'none'
        });
      })
  })(jQuery)
</script>