<%= javascript_include_tag 'fedena.autocomplete.js' %>
<%= stylesheet_link_tag 'student/view_all.css' %>
<script type="text/javascript"> function setOption(optn) {document.getElementById("option").value = optn;} </script>
<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			   <%= image_tag("/images/routes/reports.png") %>
 				 <h1> Report </h1>
 				 <h3> Route Details </h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>	
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	

<div id="content" class="xgrid">


<div id="inner-tab-menu">
  <ul>
    <li><%= link_to 'PDF', "javascript:void(0)" ,:id=>"pdf-route-report"%></li>
  </ul>
</div>

<div id="page-yield">
  <div id="search_box_bg">
    <form name="search_form" action="" style="display:inline;">
      <%= hidden_field_tag("option", params['option'], :value => "active") %>
      <label for="user_name"><%= t('search_text') %>
        <%= image_tag("loader.gif",
          :align => "absmiddle",
          :border => 0,
          :id => "loader",
          :style =>"display: none;" ) %>
      </label>
      <div id="search_textbox">
        <%= text_field_tag("query", params['query'], :autocomplete => 'off') %>
      </div>
      <div class="extender"></div>
    </form>
  </div>
  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

<div class="container">
  <%= render :partial=>"route_locate_user",:locals=>{:routes=>@routes} %>
</div>  


<%#= observe_fields ['query', 'option'],
:frequency => 0.5,
:update => 'information',
:before => "Element.show('loader')",
:success => "Element.hide('loader')",
:url => {:action => 'search_ajax'} %>


  <div id="information"></div>

</div>
</div>

<script type="text/javascript" >
  jQuery(document).ready(function(){
    jQuery("#pdf-route-report").click(function(){
      option = jQuery("#option").val();
      query = jQuery("#query").val();
      url= "/routes/pdf_report?option="+option+"&query="+query+"&format=pdf"
      window.location =url;
    });
  });
</script>