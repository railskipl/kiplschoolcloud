<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			   <%= image_tag("/images/routes/route.png") %>
 				 <h1><%= t("routes") %></h1>
 				 <h3><%= t("all_routes")%></h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>	
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
<div id="inner-tab-menu">
  <ul>
    <li><%= link_to "#{t('new_text')}", new_route_path %> </li>

  </ul>
</div>


<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>


  <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
  <% end %>

  <div class="box">
    <h4 align="center"><%= t("bus_route") %></h4>

    <ul id="category-list">
      <% @routes.each do |bus_route| %>
        <li class="list<%=cycle('odd', 'even')%>">
          <div class="category-name"><%= link_to bus_route.name ,route_path(bus_route) %></div>
          <div class="category-edit"><%= link_to "#{t('edit_text')}", edit_route_path(bus_route) if @current_user.admin? %></div>
          <div class="category-delete">
            <%= link_to(t('delete_text'), route_path(bus_route), :method => 'delete', :confirm => "#{t('delete_confirm_msg')}") if @current_user.admin? %>
          </div>
        </li>
      <% end %>

    </ul>
    <div class="extender"></div>
  </div>
</div>
</div>
