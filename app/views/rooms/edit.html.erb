<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			  <%= image_tag("/images/hostels/hostel.png") %>
			  <h1><%= t("room_text") %></h1>
			  <h3><%= t('new_text') %></h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>	
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <div class="bread_crumb">
      <%= link_to "#{t('room_text')}", hostel_rooms_path(@object) %> &raquo;
      <%= t('new_text') %>
    </div>

    <% form_for([@object,@room]) do |f| %>

      <%= error_messages_for :room %>

      <div class="label-field-pair">
        <div class="label-container1"><%= t("sl_no") %><span class="red" style="color:red;">*</span></div>
        <div class="input-container"><%= f.text_field :sr_no %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container1"><%= t("room_number") %><span class="red" style="color:red;">*</span></div>
        <div class="input-container"><%= f.text_field :room_no %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container1"><%= t('student_per_room') %><span class="red" style="color:red;">*</span></div>
        <div class="input-container"><%= f.text_field :student_per_room %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container1"><%= t('room_availability') %><span class="red" style="color:red;">*</span></div>
        <div class="input-container"><%= f.text_field :availability %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container1"> <%= t('room_rent') %> <span class="red" style="color:red;">*</span></div>
        <div class="input-container"><%= f.text_field :rent %></div>  
      </div>
      
      <%= submit_tag "", :value => "â–º #{t('save')}", :class => "submit_button" %>
        <!-- Routes Allocation for bus services -->
    <% end %>
    <div class="extender"></div>
  </div>
</div>
</div>
  

