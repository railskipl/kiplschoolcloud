<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			  <%= image_tag("/images/bus_service/bus.png") %>
			  <h1><%= t("transportation_fee_setting") %></h1>
			  <h3><%= t("list_of_fee_setting") %></h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>	
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
<div id="inner-tab-menu">
  <ul>
    <li><%= link_to "#{t('new_text')}", new_bus_setting_path %> </li>

  </ul>
</div>
 
<% unless flash[:notice].nil? %>
  <p class="flash-msg"> <%= flash[:notice] %> </p>
<% end %>


<% unless flash[:warn_notice].nil? %>
  <div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
<% end %>

<br/>
<br/>

<table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
    <tr class="tr-head">
      <td><%= t('sl_no') %></td>
      <td><%= t("name") %></td>
      <td><%= t('from_date') %></td>
      <td><%= t('to_date') %></td>
      <td><%= t('amount') %></td>
      <td><%= "" %></td>
      <td><%= "" %> </td>
    </tr>
    <tr class="tr-blank"></tr>
    <% @bus_settings.each_with_index do |bus_setting, i| %>
      <tr class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-1"><%= i+1 %></td>
        <td class="col-3"><%= bus_setting.name %></td>
        <td class="col-2"><%= bus_setting.starting_year || "---" %></td>
        <td class="col-2"><%= bus_setting.ending_year || "---" %></td>
        <td class="col-2"><%= bus_setting.amount %></td>
        <td class="col-3"> 
           <% if bus_setting.default_charge? %>
              <%= link_to("#{t('edit_text')}","#",:onclick => "alert('can not edit default setting');")  if @current_user.admin? %>
            <%else%>
              <%= link_to("#{t('edit_text')}",edit_bus_setting_path(bus_setting)) if @current_user.admin? %>
            <%end%>
        </td>    
        <td class="col-3"> 
             <% if bus_setting.default_charge? %>
              <%= link_to(t('delete_text'),"#",:onclick => "alert('can not edit default setting');")  if @current_user.admin? %>
            <%else%>
              <%= link_to(t('delete_text'),bus_setting_path(bus_setting), :method => 'delete', :onclick => "cannot delete from default setting") if @current_user.admin? %>
            <%end%>  
          </td>  

      </tr>
    <% end %>

</table>

</div>


