<div id="masthead">
		
		<div class="content_pad">
			
			<div id="content-header">
			  <img src="/images/manage_investiture/manage_investiture_logo.png" />
			  <h1>Laurels</h1>
			  <h3>Edit Laurels</h3>
			  <div id="app-back-button">
			  <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>
			
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	



<div id="content" class="xgrid">
		
		<div id="page-yield">
		
		   <% form_for :laurel,:url=>{:action =>'update',:id=>@laurel.id} do |f|%> 
		
		    <%= error_messages_for :laurel %>
		
		    <div id="add_news_form">
		      <div class="news_label_field">
		        <label for="news_title">Title</label>
		        <div id="news_title_text_field_bg"><%= f.text_field :title, :value => @laurel.title %></div>
		      </div>
		
		      <div class="news_label_field">
		        <label for="news_content">Summary</label>
		        <div id="news_content_text_field_bg"><%= fckeditor_textarea :laurel, :summary,:width => '600px', :height => '350px', :value => @laurel.summary %></div>
		      </div>
			 <div class="news_label_field">
		        <label for="news_content">Description</label>
		        <div id="news_content_text_field_bg"><%= fckeditor_textarea :laurel, :description, :width => '600px', :height => '350px',:value => @laurel.description %></div>
		      </div>
		    </div>
		
		    <%= submit_tag "", :value => "â–º Update", :class => "news_publish_button" %>
		  <% end %>
		
		</div>