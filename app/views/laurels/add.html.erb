<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			 <img src="/images/manage_investiture/manage_investiture_logo.png" /> 
			  <h1>Laurels</h1>
			  <h3>Publish School Laurels</h3>
			  <div id="app-back-button">
				<%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	


<div id="content" class="xgrid">
		<div id="page-yield">
		
		  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>
		
		  <% form_for :laurel do |f| %>
		
		    <%= error_messages_for :laurel%>
		
		    <div id="add_investiture_form">
		     <div class="news_label_field">
		        <label for="news_title">Title</label>
		        <div id="news_title_text_field_bg"><%= f.text_field :title, :value => @laurel.title %></div>
		      </div>

		      <div class="news_label_field">
		        <label for="news_content">Summary</label>
		        <div id="news_content_text_field_bg"><%= fckeditor_textarea :laurel, :summary, :value => @laurel.summary %></div>
		      </div>
			 <div class="news_label_field">
		        <label for="news_content">Description</label>
		        <div id="news_content_text_field_bg"><%= fckeditor_textarea :laurel, :description, :value => @laurel.description %></div>
		      </div>
		
		    </div>
		    <br/>
		
		    <%= submit_tag "", :value => "â–º Publish laurel", :class => "news_publish_button" %>
		
		  <% end %>
		
		</div>
		</div>
