<table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
  <% unless @students.blank? %>
    <tr class="tr-head">
      <td><%= t('sl_no') %></td>
      <td><%= t('first_name') %></td>
      <td><%= t('certificate') %> </td>
      
    </tr>
    <tr class="tr-blank"></tr>
    <% @students.each_with_index do |student, i| %>
      <tr class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-1"><%= i+1 %></td>
        <td class="col-4"><%=  student.full_name %></td>
        <td class="col-4">
        <% if params[:certificate_type].to_i == 1  %>
          <%= link_to t('birth_certificate'),birth_certificate_path(:id => student.id) %>
        <% elsif  params[:certificate_type] == 2 %>
            <%= link_to t('fee_certificate'),fee_certificate_path(:id => student.id) %>
        <%end%>   
       
      </td>
      </tr>
    <% end %>
  <% else %>

    <tr class="tr-<%= cycle('odd', 'even') %>">
      <td class="col-2">
        <% if @object  %>
          <%= t('no_students_found') %>
        <%else%>
          <%= t('no_employees_found') %>
        <%end%>  
      </td>
    </tr>
  <% end %>
</table>
