<%= javascript_include_tag 'jquery/jquery.min.js' %>
<%= javascript_include_tag "fancybox.js" %>
<%= stylesheet_link_tag "fancybox.css" %>

<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			 <%= image_tag("/images/student_details/import.png") %>
  			<h1><%= "Bulk Import" %></h1>
  			<h3><%= "Insert a CSV File" %></h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>	
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
  
    <div class="showcase" style="display:none">
			<% form_tag(data_import_path,:method => :post,:multipart => true) do %>
				<div class="label-field-pair">
  				<div class="label-container1">
       			<%= "Batch" %><span class="red" style="color:red"> * </span>
      		</div>
      		<div class="label-field-pair">
        		<div class="text-input-container">
        			<%= select_tag 'data[batch_id]',options_from_collection_for_select(Batch.all,:id,:name),{:prompt => 'Please Select a Batch',:class => 'batch_id'} %>
        		</div>
      		</div>   	
    		</div>
				<div class="label-field-pair">
	       	<div class="label-container1">
	       		<%= "CSV FILE" %><span class="red" style="color:red"> * </span>
	       	</div>

	        <div class="label-field-pair">
	          <div class="text-input-bg"><%= file_field_tag 'data[file]' %>
	          <label for="student_image_file" style="padding-top:0px; margin-left:17px;"><%= "Please Upload a CSV file" %></label>
	          </div>
	        </div>
	      </div>
	      <%= submit_tag "", :value => "â–º Import", :class => "submit_button" %>
			<%end%> 
		
		</div>
		<div class="extender"></div>
  </div>
</div>    
</div>
<script type="text/javascript">
	(function($){
		function toggle(selector) {
			if($(selector).val() === "") 
				$('div.showcase').hide();
			else
				$('div.showcase').show();
		}

		if ($('a.reason').length > 0) 
			$('a.reason').fancybox({
          maxWidth : 450,
          maxHeight : 800,
          height: 250,
          fitToView : false,
          autoSize  : false,
          closeClick  : false,
          openEffect  : 'none',
          closeEffect : 'none'
        });

		$('select.batch_id').bind('change',function(){
			 toggle(this)
		})
		toggle('select.batch_id');
	})(jQuery)
</script>