        <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
          <td colspan="3" class="col-8"><%= t('amount_to_pay') %></td>
          <td class="col-pdf">&nbsp;<%= @currency_type.to_s + " " + total_fees.to_s  %></td>
        </tr>
      </table>
    </div>
  </div>
  </div>

</div>
