<div id="masthead">
		
		<div class="content_pad">
			
			<div id="content-header">
			  <img src="/images/manage_news/manage_news_logo.png" />
			  <h1>Journals</h1>
			  <h3>Latest Journals</h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>

		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid"> 




		  <div id="inner-tab-menu">
			  <ul>
			    <li><%= link_to "View all", :controller => 'journals', :action => 'all' %></li>
			    <% if permitted_to? :add,:journal %>
			      <li><%= link_to 'Add', :controller => 'journals', :action => 'add' %>
			    <% end %>
			  </ul>
			</div>
		<div id="page-yield">
		
		  <% unless flash[:notice].nil? %>
		    <p class="flash-msg"> <%= flash[:notice] %> </p>
		  <% end %>
		
		  <div id="all_news">
		    <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
		      <tr class="tr-head">
		        <td>
		          Sl no.
		        </td>
		        <td>
		          Title
		        </td>
		        <td>
		         Summary
		        </td> 
				<td>
		          Author
		        </td>
		        <td>
		         Journal
		        </td>
		        <td>
		          Posted
		        </td> 
		
		      </tr>
		      <tr class="tr-blank"></tr>
		      <% @journal.each_with_index do |r,i| %>
		       
		        <% link_value = r.title %>
		        <tr class="tr-<%= cycle('odd', 'even') %>">
		          <td class="col-1">
		            <%= i+1 %>
		          </td>
		          <td class="col-3">
		            <%=  link_to link_value, :controller => 'journals', :action => 'view', :id => r.id%>
		          </td>
		          <td class="col-3">
		           
		 <%= sanitize r.summary, :tags => %w[b i a h1 h2 h3 u strike p], :attributes => %w[href]%>    
		
		          </td>     
		<td> <%= r.author.username%>  
			</td>
		          <td class="col-1">
		            <%= link_to 'view', :controller => 'journals', :action => 'view', :id => r.id %>  
		
	   
		          </td>
		          <td class="col-3">
		            Posted on  <%= (r.created_at) %> 
		          </td>  
		           
		        </tr>
		      <% end %>
		
		    </table>
		        <%= will_paginate @journal %>
		  </div>
		
		</div>
		</div>
