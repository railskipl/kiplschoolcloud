<div id="masthead">
		
		<div class="content_pad">
			
			<div id="content-header">
			  <img src="/images/manage_news/manage_news_logo.png" />
			  <h1>RFID Readers</h1>
			  <h3>Manage RFID Readers</h3>
			  <div id="app-back-button">
			  <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>
			
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->
	<div id="content" class="xgrid">
	  <div id="inner-tab-menu">
  	  <ul>
  	    <li><%= link_to "View all", :controller => 'readers', :action => 'all' %></li>

  	      <li><%= link_to 'Add', :controller => 'readers', :action => 'add' %></li>

  	  </ul>
  	</div>
  	<div id="search_add_news_area">
  	<% unless flash[:notice].nil? %><p class="flash-msg"> <%= flash[:notice] %> </p><% end %>
  	    <div class="news_search_add">
  	      <div id="news_bg">
  	        <form name="s1form" action="" style="display:inline;">
  	          <h2>Search Readers</h2>
  	          <%= text_field_tag("query", params['query'], :autocomplete => 'off') %>
  	          <div id="go"><%= submit_tag "", :value =>"Go", :controller=> 'readers', :action=>"index" %></div>
  	        </form>
  	        <div class="extender2"></div>
  	      </div>
  	    </div>
  	    <div class="extender"></div>
  	  </div>

  	<div id="page-yield">

  	  <% unless @reader.empty? %>
  	    <div id="news_result">
  	      <% @reader.each_with_index do |r,i| %>
  	        <div id="news_search_result">
  	          <% link_value = r.reader_name %>
  	          <%=  link_to link_value, :controller => "readers", :action => "view", :id => r.id%><br/>
  	            <small>posted at: <%= (r.created_at) %></small>
  	        </div>
  	      <%= '<div class="extender"></div>' if i%3 == 2 %>
  	      <% end %>
  	    </div>
  	  <% end %>

  	  <div class="extender"></div>
  	</div>
	</div>