<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			  <img src="/images/show_news/show_news_logo.png" />
			  <h1>Journals</h1>
			  <h3>Read Journal</h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>	
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">

	<div id="inner-tab-menu">
	  	 <ul>
		<li><%= link_to "View all", :controller => 'journals', :action => 'all' %></li>  
		                                 
		  <% if @current_user.admin? %>
		<li>
	<%= link_to "► Edit journal",:controller => "journals",  :action => "edit", :id => @journal.id  %></li>  
	 
					  
				  <li>
				  	<%= link_to "► Delete journal",
									        { :controller => "journals", :action => "delete", :id => @journal.id },
									        :confirm => 'Are you sure you want to delete this journal item?'%>      
										      
										</li>
						<% end %>
		</div>
		
		<div id="page-yield">
		
		  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>
		
		    <div id="news_title">
		   <h3>   <%= @journal.title %>       </h3>
		    </div>
		    <div id="create_date">
		  <i> Posted on <%= @journal.created_at.strftime("%A, %d %B, %Y") %> </i>
		  <br/>
		  <br/>
		  
		  <i><b>Author: </b> <%=  @journal.author.username %>

		  </div>
		  <br/>
		    <div id="news_content"> 
			 <b>Summary</b>
		      <%= sanitize @journal.summary , :tags => %w[b i a h1 h2 h3 u strike p], :attributes => %w[href]%>
		    </div>
		         
	  
			  <h4><ul><li> <%= link_to 'Attached file',@journal.attach.url, :class => "submit_button" %> </li></ul></h4>
			
		 
		  <div class="extender"></div>
		  </div>
		</div>
