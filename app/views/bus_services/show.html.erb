<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			   <%= image_tag("/images/bus_service/bus.png") %>
  				<h1><%= t('bus_service') %></h1>
 				 <h3><%= t('route_detail_text') %></h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>	
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">


<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
  <% end %>

  <div class="detail_box">
     <span class="row_">
       <div class="name"><%= t('bus_service_text.name') %></div>
       <div class="val">
        <span>:</span><span class="cont"><%= @bus_service.bus_name %></span>
       </div>
     </span>
     <span class="row_">
      <div class="name"><%= t('bus_service_text.bus_number') %></div>
      <div class="val">
        <span>:</span><span class="cont"><%= @bus_service.bus_no %></span>
      </div>
    </span>
    <span class="row_">
      <div class="name"><%= t('bus_service_text.driver_name') %></div>
      <div class="val">
        <span>:</span><span class="cont"><%= @bus_service.driver_name %></span>
      </div>
    </span>
    <span class="row_">
      <div class="name"><%= t('bus_service_text.conductor_name') %></div>
      <div class="val">
        <span>:</span><span class="cont"><%= @bus_service.conduct_name %></span>
      </div>
    </span>
    
    <span class="row_">
      <div class="name"><%= t('bus_service_text.no_of_seats') %></div>
      <div class="val">
        <span>:</span><span class="cont"><%= @bus_service.no_of_seats %></span>
      </div>
    </span>
    
    <span class="row_">
      <div class="name"><%= t('bus_service_text.gps_unit_no') %></div>
      <div class="val">
        <span>:</span><span class="cont"><%= @bus_service.gps_unit_no %></span>
      </div>
    </span>
    
    <span class="row_">
      <div class="name"><%= t('bus_service_text.gprs_sim_no') %></div>
      <div class="val">
        <span>:</span><span class="cont"><%= @bus_service.gprs_sim_no %></span>
      </div>
    </span>
    
    <span class="row_">
      <div class="name"><%= t('bus_service_text.status') %></div>
      <div class="val">
        <span>:</span><span class="cont"><%= @bus_service.status %></span>
      </div>
    </span>
    
    <span class="row_">
      <div class="name"><%= t('bus_service_text.reader_id') %></div>
      <div class="val">
        <span>:</span><span class="cont"><%= @bus_service.reader_id %></span>
      </div>
    </span>
    
    
    <span class="row_">
      <div class="name"><%= t('bus_service_text.contact_number') %></div>
      <div class="val">
        <span>:</span><span class="cont">
          <%= @bus_service.contact_number.present? ? @bus_service.contact_number : "Not Present" %>
        </span>
      </div>
    </span>

     <span class="row_">
      <div class="name"><%= t('bus_service_text.bus_allocated_number') %></div>
      <div class="val">
        <span>:</span><span class="cont"><%= @bus_service.bus_allocated_no %></span>
      </div>
    </span>
  </div>

  <div class="extender">
  </div>
  <br/>

  <table align="center" width="100%" cellpadding="1" cellspacing="1" id="listing">
    <tr class="tr-head">
      <td><%= t('bus_service_text.bus_route_name') %> </td>
      <td>  </td>
    </tr>

    <% @bus_service.routes.each do |route| %>
      <tr class="<%= cycle('tr-odd','tr-even') %>">
        <td class="col-12" style="padding:5px"> <%= route.name %> </td>
        <td class="col-unique" style="padding:5px"> <%= link_to "#{t('edit_text')}",edit_route_path(route) %> | <%= link_to(t('delete_text'), route_path(route),:method => :delete ,:confirm => 'Are you sure')%></td>  
      </tr>  
    <%end%> 
  </table>     
</div>

