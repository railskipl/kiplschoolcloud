		      </div>
		
		      <div class="news_label_field">
		        <label for="news_content">Reader Tag</label>
		        <div id="news_content_text_field_bg"><%= f.text_field :reader_tag, :value => @reader.reader_tag %></div>
		      </div>
			 <div class="news_label_field">
		        <label for="news_content">Description</label>
		        <div id="news_content_text_field_bg"><%= f.text_field :location, :value => @reader.location %></div>
		      </div>
		    </div>
		
		    <%= submit_tag "", :value => "â–º Update", :class => "news_publish_button" %>
		  <% end %>
		
		</div>