<script type="text/javascript"> function setOption(optn) {document.getElementById("option").value = optn;} </script>

<div id="content-header">
  <%= image_tag("/images/certificates/certificate.jpg") %>
  <h1><%= t('certificate') %></h1>
  <h3><%= t('select_user') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="inner-tab-menu">

</div>

<div id="page-yield">
  <div id="search_box_bg" style="height:35px;">
    <form name="search_form" action="" style="display:inline;">
      <label for="user_name" style="width:96px;"><%= t('certificate') %>
        <%= image_tag("loader.gif",
          :align => "absmiddle",
          :border => 0,
          :id => "loader",
          :style =>"display: none;" ) %>
      </label>

      <div id="search_textbox">
        <select id="certificate_type" name="certificate_type">
          <option value="0"> <%= t('please_select_certificate') %> </option>
          <option value="1"> <%= t('birth_certificate') %> </option>
          <option value="2"> <%= t('experience_certificate') %> </option>
          <option value="3"> <%= t('fee_certificate') %> </option>
          <option value="4"> <%= t('joining_certificate') %> </option>
          <option value="5"> <%= t('resignation_certificate') %> </option>
          <option value="6"> <%= t('office_order') %> </option> 
        </select>  
      </div>
     
      <div class="extender"></div>
    </form>
  </div>
  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <div id="view_all">

  </div>


<%#= observe_fields ['query', 'option'],
:frequency => 0.5,
:update => 'information',
:before => "Element.show('loader')",
:success => "Element.hide('loader')",
:url => {:action => 'search_ajax'} %>

  <script type="text/javascript">
    function search_ajax(){
      if (jQuery('#certificate_type').val() != 0) {
          <%="#{remote_function(:url => {:action => "take_call"},
          :with => "'certificate_type='+jQuery('#certificate_type').val()",
          :before => "Element.show('loader')",
          :success => "Element.hide('loader')",
          :update=>"information"
          )}"%>
     }
     else {
        alert("<%= t('please_select_certificate') %> ")
     }
}


  document.observe("dom:loaded", function() {
    new Form.Element.Observer('certificate_type', 1, search_ajax);
   
  });

  </script>

  <div id="information" style="position:relative;left:143px;margin-top:10px"></div>

</div>