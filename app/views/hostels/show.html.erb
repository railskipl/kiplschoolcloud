<div id="masthead">
		
		<div class="content_pad">
			<div id="content-header">
			   <%= image_tag("/images/hostels/hostel.png") %>
  				<h1><%= t("hostel") %></h1>
  				<h3><%= t("hostel_text.room_detail") %></h3>
			  <div id="app-back-button">
			    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
			  </div>
			</div>	
		</div> <!-- .content_pad -->
		
	</div> <!-- #masthead -->	
	
	<div id="content" class="xgrid">


<div id="inner-tab-menu">
  <ul>
    <li><%= link_to "#{t('new_room_text')}", new_hostel_room_path(@hostel) %> </li>
  </ul>
</div>


<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
  <% end %>

  <div class="detail_box">
     <span class="row_">
       <div class="name"><%= t('hostel_text.name') %></div>
       <div class="val">
       	<span>:</span><span class="cont"><%= @hostel.name %></span>
       </div>
     </span>
     <span class="row_">
    	<div class="name"><%= t('hostel_text.type') %></div>
    	<div class="val">
    		<span>:</span><span class="cont"><%= @hostel.hostel_type %></span>
    	</div>
    </span>
    <span class="row_">
    	<div class="name"><%= t('hostel_text.other_information') %></div>
    	<div class="val">
    		<span>:</span><span class="cont"><%= @hostel.information %></span>
    	</div>
    </span>
    <span class="row_">
    	<div class="name"><%= t('hostel_text.total_number_of_room') %></div>
    	<div class="val">
    		<span>:</span><span class="cont"><%= @rooms.count %></span>
    	</div>
    </span>
	</div>

	<div class="extender">
	</div>
	<br/>

  <table align="center" width="100%" cellpadding="1" cellspacing="1" id="listing">
    <tr class="tr-head">
      <td><%= t('sl_no') %></td>
      <td><%= t('room_number') %></td>
      <td><%= t('student_per_room') %></td>
      <td><%= t('room_availability') %></td>
      <td><%= t('room_rent') %> </td>
      <td> </td>
    </tr>
   
    <% @rooms.each do |room| %>
      <tr class="<%= cycle('tr-odd','tr-even') %>">
        <td class="col-3"> <%= room.sr_no %> </td>
        <td class="col-7"> <%= room.room_no %> </td>
        <td class="col-7"> <%= room.student_per_room %> </td>
        <td class="col-7"> <%= room.availability %> </td>
        <td class="col-3"> <%= room.rent %> </td>
        <td class="col-unique"> <%= link_to "#{t('edit_text')}",edit_hostel_room_path(@hostel,room) %> | <%= link_to "#{t('delete_text')}" ,hostel_room_path(@hostel,room) ,:method => :delete ,:confirm => 'Are you sure'%></td>  
      </tr>  
    <%end%> 
  </table>     
</div>
</div>
